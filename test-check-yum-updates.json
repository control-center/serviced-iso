{
  "builders": [
  {
    "type": "virtualbox-ovf",
    "source_path": "test-iso-vm-output/zenoss-core-test-iso-vm.ovf",
    "ssh_username": "centos",
    "ssh_password": "centos",
    "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
    "output_directory": "{{user `outputdir`}}"
  }
],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo 'Checking yum updates'",
        "sudo yum check-update",
        "echo 'Done checking yum updates'"
      ]
    }
  ],
  "variables": {
    "inputdir": "test-iso-vm-output",
    "outputdir": "test-check-yum-updates-output"
  }
}
