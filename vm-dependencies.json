{
  "builders": [
    {
      "boot_wait": "20s",
      "output_directory": "{{user `outputdir`}}",
      "ssh_password": "{{user `zenosstype`}}",
      "ssh_port": 22,
      "ssh_username": "ccuser",
      "ssh_wait_timeout": "900s",
      "headless": true,
      "type": "vmware-vmx",
      "source_path": "{{user `inputdir`}}/zenoss-{{user `zenosstype`}}.vmx",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "1",
        "virtualhw.version": "8",
        "mainMem.useNamedFile": "FALSE",
        "mainMem.backing": "swap"
      }
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "vm_name": "{{user `vm_name`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "900s",
      "headless": true,
      "disk_size": 32768,
      "http_directory": "http",
      "boot_command": [
        "<wait><esc><esc>",
        "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart<enter>"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "echo 'START RPM LIST'; rpm -qa; echo 'END RPM LIST'" ]
    }
  ],
  "variables": {
    "zenosstype": "core",
    "inputdir": "prereqs",
    "outputdir": "output",
    "vm_name": "zenoss-centos-7.2.1511",
    "iso_url": "http://artifacts.zenoss.eng/isos/CentOS-7-x86_64-Minimal-1511.iso",
    "iso_checksum": "88c0437f0a14c6e2c94426df9d43cd67",
    "ssh_username": "centos",
    "ssh_password": "centos",
  }
}
